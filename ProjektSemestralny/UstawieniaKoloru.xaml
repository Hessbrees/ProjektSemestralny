<Window x:Class="ProjektSemestralny.UstawieniaKoloru"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralny"
        mc:Ignorable="d"
        Title="UstawieniaKoloru" Height="420" Width="320"
        ResizeMode ="NoResize" Topmost="False" WindowState="Normal">

    <Grid Background="AntiqueWhite">
        <Button Content="Usuń kolor" HorizontalAlignment="Center" Margin="0,0,0,160" VerticalAlignment="Bottom" Width="100" Height="20"/>
        <TextBlock HorizontalAlignment="Center" Margin="10,10,0,0" Text="Ustawienia kolorów" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial" FontSize="20"/>
        <Grid HorizontalAlignment="Center" Height="130" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="265">
            
            
            <Button Content="Wybierz z listy" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Bottom" Width="100" Height="20"/>
            <Button Content="Zamknij" HorizontalAlignment="Right" Margin="0,0,55,0" VerticalAlignment="Bottom" Width="70" Height="20" Click="Button_Click"/>

        </Grid>
        <Grid HorizontalAlignment="Center" Margin="0,0,0,50" Height="100" VerticalAlignment="Bottom" Width="290" Background="AliceBlue" OpacityMask="#FF114BC7" >
            <Border BorderBrush="Black" BorderThickness="1"></Border>
            <Rectangle x:Name="actualColor" HorizontalAlignment="Right" Fill="White" Height="32" Margin="0,0,10,30" Stroke="Black" VerticalAlignment="Bottom" Width="32"/>
            <TextBox x:Name="greenColor" HorizontalAlignment="Left" Margin="100,0,0,30" Text="" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="50"/>
            <TextBox x:Name="redColor" HorizontalAlignment="Left" Margin="20,0,0,30" Text="" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="50"/>
            <TextBox x:Name="blueColor" HorizontalAlignment="Right" Margin="0,0,55,30" Text="" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="50"/>
            <TextBlock HorizontalAlignment="Left" Margin="67,0,0,80" Text="Nowy kolor RGB" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
            
            <TextBlock HorizontalAlignment="Left" Margin="20,0,0,55" Text="Czerwony" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
            <TextBlock HorizontalAlignment="Left" Margin="105,0,0,55" Text="Zielony" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
            <TextBlock HorizontalAlignment="Right" Margin="0,0,55,55" Text="Niebieski" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
            
            <Button Content="Zapisz kolor" HorizontalAlignment="Left" Margin="180,0,0,70" VerticalAlignment="Bottom" Width="100" Height="20" Click="Button_Click_2"/>
            <Button Content="Zmień" HorizontalAlignment="Center" Margin="0,0,0,5" VerticalAlignment="Bottom" Width="100" Height="20" Click="Button_Click_1"/>
        </Grid>

        <ListBox Margin="0,50,0,0" VerticalAlignment="Top" Width="250" Height="150"/>

    </Grid>
</Window>

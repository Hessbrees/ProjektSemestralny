<Window x:Class="ProjektSemestralny.WybierzProjekt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralny"
        mc:Ignorable="d"
        Title="WybierzProjekt" Height="480" Width="320"
        ResizeMode ="NoResize" Topmost="False" WindowState="Normal">
    <Grid Background="AntiqueWhite">
        <TextBlock HorizontalAlignment="Center" Margin="10,10,0,0" Text="Wybierz Projekt" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial" FontSize="20"/>
        <ListBox x:Name="projectList" VerticalAlignment="Top" Margin="0,60,0,0" Width="250" Height="320" BorderBrush="#FF1745D1"/>

        <Button Content="Uruchom" HorizontalAlignment="Left" Margin="70,390,0,0" VerticalAlignment="Top" Width="70" Height="20" Click="Button_Click_1"/>
        <Button Content="Zamknij" HorizontalAlignment="Right" Margin="0,390,70,0" VerticalAlignment="Top" Width="70" Height="20" Click="Button_Click"/>

    </Grid>
</Window>
